<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sameer18051998.merger_ws.MainActivity"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/hello">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello, User!"
        android:id="@+id/textView"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/call_button"
        android:layout_marginTop="82dp"
        android:src="@android:drawable/sym_action_call"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera_button"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_alignTop="@+id/call_button"
        android:layout_alignEnd="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_button"
        android:layout_marginTop="82dp"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_below="@+id/camera_button"
        android:layout_alignStart="@+id/call_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calc_button"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignTop="@+id/message_button"
        android:layout_alignStart="@+id/camera_button" />
</RelativeLayout>
